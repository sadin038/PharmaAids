<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="3"
android:background="#BDB6B6"
tools:context=".PharmaNewMedicineAdd">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add medicine"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/UserRegistrationImageViewId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight=".8"
        android:src="@drawable/slide3"
        />


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.6"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/PharmaMedicineNameId"
        android:background="@drawable/login_background"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/name"
        android:textSize="20dp"
        android:hint="   Enter Medicine Name..."
        android:padding="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PharmaMedicineAvailabilityId"
        android:inputType="numberDecimal"
        android:background="@drawable/login_background"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/avail"
        android:textSize="20dp"
        android:hint="   Enter Your Availability..."
        android:padding="5dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/PharmaMedicinePriceId"
        android:background="@drawable/login_background"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_marginBottom="25dp"
        android:drawableLeft="@drawable/price"
        android:hint="   Enter Per Unit Price..."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/PharmaMedicineButtonId"
        android:text="Register"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:textSize="20dp"/>

</LinearLayout>

</LinearLayout>